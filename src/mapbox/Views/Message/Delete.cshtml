@{
    ViewData["Title"] = "Delete";
}

@model mapbox.Models.Message
<br />
<h3>Are you sure you want to delete this job?</h3>
<hr />
<div class="card">
    @Html.DisplayFor(model => model.Locaton)
    <form asp-action="Delete" asp-controller="Message" method="post">
        <input for="message" type="hidden" value="@Model.Id" name="id" />
        <input type="submit" class="btn btn-warning" value="Delete" />
    </form>
</div>